<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item_Description"
        android:id="@+id/description_ordered"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="38dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Item_Price"
        android:id="@+id/Ordered_Total"
        android:layout_below="@+id/description_ordered"
        android:layout_alignRight="@+id/description_ordered"
        android:layout_alignEnd="@+id/description_ordered" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Item_Delete"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/description_ordered"
        android:layout_toEndOf="@+id/description_ordered"
        android:layout_marginLeft="60dp" />


</RelativeLayout>