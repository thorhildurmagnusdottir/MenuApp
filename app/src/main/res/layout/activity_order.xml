<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gunnarsturla.restaurantappgi.OrderActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Order"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/orderHeader" />


	<!-- Breyta þessu í RecycleView -->

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Your total is: NAN"
		android:textSize="24dp"
		android:id="@+id/orderTotal"
		android:minHeight="64dp"
		android:maxLines="1"
		android:layout_alignParentBottom="true"
		android:gravity="center_vertical"
		android:padding="@dimen/order_total_padding"
		android:layout_toLeftOf="@+id/payButton"/>

	<ListView
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/listViewOrdered"
	    android:layout_gravity="center_horizontal"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentStart="false"
	    android:layout_below="@+id/orderHeader"
	    android:layout_above="@+id/orderTotal"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/payButton"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_margin="@dimen/order_total_padding"
		android:text="Staðfesta og borga"/>

</RelativeLayout>
